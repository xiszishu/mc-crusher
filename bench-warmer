#!/usr/bin/perl

use strict;
use warnings FATAL => 'all';

use IO::Socket::INET;
use IO::Socket::UNIX;

my $addr = $ARGV[0];
my $prefix = $ARGV[1];
my $size = $ARGV[2];
my $count = $ARGV[3];
my $exptime = 0;

die "bench-warmer addr prefix size count" unless $addr && $prefix && $size && $count;

# my $sock = IO::Socket::INET->new(PeerAddr => $addr,
#                                  Timeout  => 3);
my $sock = IO::Socket::UNIX->new(Type => SOCK_STREAM(), Peer => $addr);
die "$!\n" unless $sock;

$|++;
my $data = '1';
$data = 'x' x $size;
my @queue = ();
foreach (1 .. $count) {
    push(@queue, "set $prefix${_} 0 $exptime $size noreply\r\n$data\r\n");
    drain(100);
    #scalar <$sock>;
    print "Run: $_\n" if ($_ % int($count / 10) == 0);
}
drain(0);

sub drain {
    my $lim = shift;
    if (scalar(@queue) > $lim) {
        print $sock join('', @queue);
        @queue = ();
    }
}

print "\nDone setting\n";

